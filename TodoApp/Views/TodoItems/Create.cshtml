<!-- Pages/Create.cshtml -->
@model TodoItem
@{
    ViewData["Title"] = "Create";
}
<h1>Create New Task</h1>

<form id="createForm" action="create" method="post">
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Priority: </label>
        <input asp-for="Priority" class="form-control" min="1" max="5" required />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Status:</label>
        <select asp-for="Status" class="form-control" required>
            <option value="NotStarted">Not Started</option>
            <option value="InProgress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <br />
    <input class="submit btn btn-primary" type="submit" value="Create">
    @Html.ActionLink("Cancel","Index","TodoItems")
</form>
<br />



