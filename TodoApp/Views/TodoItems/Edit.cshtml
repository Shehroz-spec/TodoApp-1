@model TodoItem
@{
    ViewData["Title"] = "Edit";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>

<h2>Edit</h2>
<h4>Todo</h4>
<hr />
<form id="editForm" action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Priority:</label>
        <input asp-for="Priority" class="form-control" min="1" max="5" required />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Status:</label>
        <select asp-for="Status" class="form-control" required>
            <option value="NotStarted">Not Started</option>
            <option value="InProgress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <br />

    <input class="submit btn btn-primary" type="submit" value="Update" />
    <span>
        @Html.ActionLink("Cancel","Index","TodoItems")
    </span>
</form>


 